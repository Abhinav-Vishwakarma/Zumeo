{
  "variables": {
    "PORT": "8000"
  },
  "environments": {
    "production": {
      "buildCommand": "python -m venv venv && . venv/bin/activate && pip install -r requirements.txt",
      "startCommand": "venv/bin/uvicorn main:app --host 0.0.0.0 --port $PORT",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
}
